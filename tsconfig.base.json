{
  "compilerOptions": {
    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* Modules */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Language and Environment */
    "target": "es2020",
    "lib": ["es2020"],

    /* Other */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
